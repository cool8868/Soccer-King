<UserControl x:Class="Games.NB.Match.Emulator.WPF.Controls.LocalPlayerSkillSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="61" d:DesignWidth="418">
    <Grid>
        <GroupBox x:Name="groupSkill" Header="技能1" Height="52" Canvas.Top="180" Canvas.Left="10">
            <Canvas>
                <ComboBox x:Name="cmbType" Style="{DynamicResource SimpleComboBox}" Width="85" Canvas.Top="5" Canvas.Left="8" SelectionChanged="CmbType_OnSelectionChanged"/>
                <ComboBox x:Name="cmbColor" Style="{DynamicResource SimpleComboBox}" Width="85" Canvas.Left="98" Canvas.Top="5" SelectionChanged="CmbType_OnSelectionChanged"></ComboBox>
                <ComboBox x:Name="cmbLevel" Style="{DynamicResource SimpleComboBox}" Width="85" Canvas.Left="188" Canvas.Top="5" SelectionChanged="CmbType_OnSelectionChanged"></ComboBox>
                <ComboBox x:Name="cmbSkill" Style="{DynamicResource SimpleComboBox}" Width="124" Canvas.Left="278" Canvas.Top="5"></ComboBox>
            </Canvas>
        </GroupBox>
    </Grid>
</UserControl>
