#include "MatchStatus.h"

MatchStatus::MatchStatus()
{
    InitVariables();
}

void MatchStatus::InitVariables()
{
    m_Round                 = 0;
    m_Time                  = 0;

    m_IsFirstHalf           = false;
    m_Interruption          = false;
    m_Foul                  = false;
    m_Break                 = false;

    m_BallHandler           = NULL;
    
    m_IsNoBallHandler       = false;
    m_IsGoal                = false;

    m_CancelUpdateStatus    = false;

    m_NeedSave              = false;
}
